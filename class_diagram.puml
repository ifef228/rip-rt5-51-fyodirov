@startuml Class Diagram (based on provided example)

' Nodes / external tools
node "Postman" as Postman

' API groups
cloud "API договоров в заявках" as API_ContractsInAccounts
cloud "API договоров" as API_Contracts
cloud "API заявок на счета" as API_Accounts
cloud "API пользователей" as API_Users

Postman --> API_ContractsInAccounts
Postman --> API_Contracts
Postman --> API_Accounts
Postman --> API_Users

' Backend
package "Бэкенд" {
  package "Набор методов Договоров" as BackendContracts {
    note as N1
    +GET /contracts()
    +GET /contracts/<id>()
    +POST /contracts()
    +PUT /contracts/<id>()
    +DELETE /contracts/<id>()
    +POST /contracts/<id>/draft()
    +POST /contracts/<id>/image()
    end note
  }

  package "Набор методов Договоров в заявках" as BackendContractsInAccounts {
    note as N2
    +DELETE /accounts/<accountId>/contract/<contractId>()
    +PUT /accounts/<accountId>/contract/<contractId>/main()
    end note
  }

  package "Набор методов Заявок на счета" as BackendAccounts {
    note as N3
    +GET /accounts()
    +GET /accounts/<id>()
    +PUT /accounts/<id>()
    +PUT /accounts/<id>/submit()
    +PUT /accounts/<id>/complete()
    +DELETE /accounts/<id>()
    end note
  }

  package "Набор методов Пользователей" as BackendUsers {
    note as N4
    +POST /users()
    +PUT /users()
    +POST /users/login()
    +POST /users/logout()
    end note
  }
}

API_ContractsInAccounts ..> BackendContractsInAccounts
API_Contracts ..> BackendContracts
API_Accounts ..> BackendAccounts
API_Users ..> BackendUsers

' Model layer
package "Модель" {
  class Contract
  class AccountContract
  class Account
  class User
}

' Database tables
package "База данных" {
  class contracts <<table>>
  class account_contracts <<table>>
  class accounts <<table>>
  class users <<table>>
}

' Mapping Model -> Tables
Contract --> contracts : maps to
AccountContract --> account_contracts : maps to
Account --> accounts : maps to
User --> users : maps to

' Relationships (as in example)
contracts "1" -- "0..*" account_contracts
accounts "0..*" -- "1" account_contracts
users "0..*" -- "0..1" accounts

' Dashed guidance arrows from backend to model (illustrative like example)
BackendContracts ..> Contract
BackendContractsInAccounts ..> AccountContract
BackendAccounts ..> Account
BackendUsers ..> User

@enduml
